<form method="POST" enctype="multipart/form-data">
  <div class='container d-flex justify-content-between'>
    <div class='addDev'>
      <h2>Добавление нового клиента</h2>
      <div class="form-group">
        <label for="formGroupExampleInput">Имя</label>
        <input name='clientName' type="text" class="form-control" id="formGroupExampleInput"
          placeholder="ФИО или название компании">
      </div>
      <div class="form-group">
        <label for="formGroupExampleInput2">Телефон</label>
        <input name='clientPhone' type="phone" class="form-control" id="phone" placeholder="Общий телефон">
      </div>
      <div class="form-group">
        <label for="formGroupExampleInput2">Контактное лицо</label>
        <input name='contactPerson' type="text" class="form-control" id="formGroupExampleInput2"
          placeholder="Контактное лицо">
      </div>
      <div class="form-group">
        <label for="formGroupExampleInput2">Личный телефон</label>
        <input name='personalPhone' type="phone" class="form-control" id="formGroupExampleInput2"
          placeholder="Личный телефон">
      </div>
      <div class="form-group">
        <label for="formGroupExampleInput2">Email</label>
        <input name='companyEmail' type="email" class="form-control" id="formGroupExampleInput2" placeholder="Email">
      </div>
      <div class="form-group">
        <label for="exampleFormControlTextarea1">Комментарии</label>
        <textarea name='notes' class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
      </div>
    </div>

    <div class='pictureDiv'>
      <h2>Добавление картины</h2>
      <div class="form-group">
        <label for="formGroupExampleInput">Название картины</label>
        <input name='title' type="text" class="form-control" id="formGroupExampleInput" placeholder="Название картины">
      </div>
      <div class="form-group">
        <label for="formGroupExampleInput">Автор</label>
        <input name='author' type="text" class="form-control" id="formGroupExampleInput" placeholder="Автор">
      </div>
      <div class="form-group">
        <label for="formGroupExampleInput">Стоимость</label>
        <input name='cost' type="text" class="form-control" id="formGroupExampleInput" placeholder="Стоимость">
      </div>
      <div class="custom-file">
        <input name='photo' type="file" class="custom-file-input" id="customFile">
      </div>
    </div>
  </div>
  <div class='d-flex justify-content-center'>
    <button type="submit" class="btn btn-primary mt-5 btn-lg">Добавить</button>
  </div>
</form>

